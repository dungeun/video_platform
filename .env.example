# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/linkpick"

# Alternative PostgreSQL URLs (for different deployment environments)
POSTGRES_URL="postgresql://postgres:postgres@localhost:5432/linkpick"
POSTGRES_PRISMA_URL="postgresql://postgres:postgres@localhost:5432/linkpick"
POSTGRES_URL_NON_POOLING="postgresql://postgres:postgres@localhost:5432/linkpick"

# PostgreSQL credentials (if not using connection string)
POSTGRES_USER="postgres"
